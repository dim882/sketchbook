{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "lib": ["ES2023", "DOM"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
