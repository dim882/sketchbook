{
  "name": "tools",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel watch serve ui:watch",
    "clone": "bun src/clone/clone.ts",
    "build": "bun src/build/build.ts",
    "lib:pull": "bun src/lib-pull.ts",
    "serve": "bun --watch src/server/server.ts",
    "watch": "bun src/watch/watch.ts",
    "ui:build": "rollup -c ./src/ui/rollup.config.js",
    "ui:watch": "rollup -c ./src/ui/rollup.config.js -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit"
  },
  "resolutions": {
    "rollup": "@rollup/wasm-node"
  },
  "dependencies": {
    "@rollup/wasm-node": "^4.20.0",
    "@swan-io/boxed": "^3.2.1",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "chokidar": "^3.6.0",
    "express": "^4.19.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.0",
    "preact": "^10.25.4",
    "rollup": "^4.20.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.12.11",
    "@vitest/coverage-v8": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.0.0",
    "postcss-modules": "^6.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "vitest": "^2.0.0"
  }
}